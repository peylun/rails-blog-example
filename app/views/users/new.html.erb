<h3 align="center">
  Sign up!
</h3>

<%= render 'shared/errors', obj: @user %>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |user| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= user.label :username %>
          </div>
          <div class="col-sm-8">
            <%= user.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= user.label :email %>
          </div>
          <div class="col-sm-8">
            <%= user.email_field :email, class: "form-control", placeholder: "Enter email" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= user.label :password %>
          </div>
          <div class="col-sm-8">
            <%= user.password_field :password, class: "form-control", placeholder: "Enter password" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= user.submit "Sign up", class: "btn btn-primary" %>  
          </div>
        </div>
      <% end %>
      <div>
        [<%= link_to 'Back to Home', root_path %>]
      </div>
    </div>
  </div>
</div>