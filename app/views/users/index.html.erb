<h3 align="center">
  All Users
</h3>
<div align="center">
  <%= will_paginate %>
  
  <div class="container container-user-listing">
  <% @users.each do |user| %>
    <div class="row">
      <div class="well col-xs-12">
        <ul class="listing">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title"><%= link_to user.username, user_path(user) %></li>
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
          <% if logged_in? && current_user.admin? %>
            <li><%= link_to "Delete", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this user and all of his/her articles?"}, class: "btn btn-danger btn-xs" %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  </div>
  
  <%= will_paginate %>
</div>