<% if obj.errors.any? %>
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h5 class="panel-title">
            Unable to save the article due to <%= pluralize(obj.errors.count, "error") %>:
          </h5>
        </div>
        <div class="panel-body">
          <ul>
          <% obj.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>