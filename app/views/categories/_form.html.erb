<%= render 'shared/errors', obj: @category %>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |category| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= category.label :name %>
          </div>
          <div class="col-sm-8">
            <%= category.text_field :name, class: "form-control", placeholder: "Name of category", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= category.submit class: "btn btn-primary" %>  
          </div>
        </div>
      <% end %>
      <div>
        [<%= link_to 'Back to Categories', categories_path %>]
      </div>
    </div>
  </div>
</div>