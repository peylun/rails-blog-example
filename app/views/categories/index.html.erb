<h3 align="center">
  List of Categories
</h3>
<div class="center">
  <%= will_paginate %>
</div>

<div class="container">
  <% @categories.each do |category| %>
    <div class="row">
      <div class="col-xs-12">
        <div class="well well-sm">
          <div class="article-title">
            <%= link_to category.name, category_path(category) %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="center">
  <%= will_paginate %>
</div>