<% if @article.errors.any? %>
<h4>
  Unable to save the article:
</h4>
<ul>
<% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
<% end %>
</ul>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |article| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= article.label :title %>
          </div>
          <div class="col-sm-8">
            <%= article.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= article.label :description %>
          </div>
          <div class="col-sm-8">
            <%= article.text_area :description, class: "form-control", rows: 10, placeholder: "Body of article" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= article.submit class: "btn btn-primary" %>  
          </div>
        </div>
      <% end %>
      <div>
        [<%= link_to 'Back to Articles', articles_path %>]
      </div>
    </div>
  </div>
</div>